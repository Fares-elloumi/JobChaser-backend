generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Job {
  id        String  @id @default(uuid())  
  position  String
  f√∂retag   String
  plats     String
  kontract  String
  roleId    String
  role      Role    @relation(fields: [roleId], references: [id], onDelete: Cascade)
}

model Role {
  id    String  @id @default(uuid())  
  name  String  @unique
  jobs  Job[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
